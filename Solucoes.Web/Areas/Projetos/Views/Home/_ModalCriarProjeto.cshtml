@model Solucoes.Web.Areas.Projetos.Models.Home.ProjetoViewModel

<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="modalCriarProjeto" tabindex="-1" aria-labelledby="modalCriarProjetoLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modalCriarProjetoLabel">Adicionar Projeto</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				@Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

				@using (Html.BeginForm("Criar", "Projeto", FormMethod.Post, new { @id = "formCriarProjeto" }))
				{
					<div class="row mb-3">
						<div class="col-sm-3">
							@Html.LabelFor(m => m.Nome, new { @class = "form-label" })
						</div>
						<div class="col-sm-9">
							<div class="input-group">
								<span class="input-group-text" id="nome-addon">
									<i class="fa-solid fa-heading"></i>
								</span>
								@Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @aria_describedby = "nome-addon" })
							</div>
							@Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="row mb-3">
						<div class="col-sm-3">
							@Html.LabelFor(m => m.Descricao, new { @class = "form-label" })
						</div>
						<div class="col-sm-9">
							<div class="input-group">
								<span class="input-group-text" id="nome-addon">
									<i class="fa-solid fa-align-left"></i>
								</span>
								@Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @rows = 3, @aria_describedby = "nome-addon" })
							</div>
							@Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "text-danger" })
						</div>
					</div>
				}
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-light" data-bs-dismiss="modal">Fechar</button>
				<button id="submitFormCriarProjeto" type="button" class="btn btn-primary">Adicionar</button>
			</div>
		</div>
	</div>
</div>