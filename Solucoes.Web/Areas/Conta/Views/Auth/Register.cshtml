@model Solucoes.Web.Areas.Conta.Models.Auth.RegisterViewModel

@{
    ViewData["Title"] = "Cadastro";
}

@section Styles {
    <style type="text/css">
        .register-form {
            max-width: 600px;
        }
    </style>
}

<div class="d-block m-auto w-100 register-form">
    <div class="card shadow">
        <h2 class="card-header">Realizar cadastro</h2>
        <div class="card-body">
            <p class="card-text mb-4">Insira as informações necessárias para criar a sua conta.</p>

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            @using (Html.BeginForm("Register", "Auth", new { area = "Conta" }, FormMethod.Post))
            {
                <div class="row mb-3">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.PrimeiroNome, new { @class = "form-label" })
                    </div>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-text" id="primeiro-nome-addon">
                                <i class="fa-solid fa-user"></i>
                            </span>
                            @Html.TextBoxFor(m => m.PrimeiroNome, new { @class = "form-control", @aria_describedby = "primeiro-nome-addon" })
                        </div>
                        @Html.ValidationMessageFor(m => m.PrimeiroNome, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.Sobrenome, new { @class = "form-label" })
                    </div>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-text" id="sobrenome-addon">
                                <i class="fa-solid fa-user"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Sobrenome, new { @class = "form-control", @aria_describedby = "sobrenome-addon" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Sobrenome, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                    </div>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-text" id="username-addon">
                                <i class="fa-solid fa-at"></i>
                            </span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @aria_describedby = "username-addon" })
                        </div>
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    </div>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-text" id="email-addon">
                                <i class="fa-solid fa-envelope"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @aria_describedby = "email-addon" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    </div>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-text" id="password-addon">
                                <i class="fa-solid fa-key"></i>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @aria_describedby = "password-addon" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                    </div>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-text" id="confirm-password-addon">
                                <i class="fa-solid fa-key"></i>
                            </span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @aria_describedby = "confirm-password-addon" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button class="btn btn-primary d-block ms-auto" type="submit">Cadastrar-se</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}